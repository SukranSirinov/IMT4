@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        About
    </div>
    <div class="card-body">
        <div class="w-100 d-flex justify-content-end">
            <a asp-action="Update" class="btn btn-outline-success">Edit</a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

            <div class="col-md-6">
                <img class="w-100" src="~/Assets/images/@item.Image" />
            </div>
            <div class="col-md-6">

                <p>Full Name : @item.Name</p>
                <p>Description : @item.Title</p>
                <p>BirthDay : @item.Price</p>
              
            </div>
            }
        </div>
    </div>
</div>